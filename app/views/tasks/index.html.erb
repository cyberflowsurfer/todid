<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Name</th>
      <th>Activity</th>
      <th>Who</th>
      <th>Notes</th>
      <th>Minutes</th>
      <th>Completed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.goal %></td>
        <td><%= task.name %></td>
        <td><%= task.activity %></td>
        <td><%= task.who %></td>
        <td><%= task.notes %></td>
        <td><%= task.minutes %></td>
        <td><%= task.completed_at %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

